<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 主应用主题 -->
    <style name="Theme.RunYangBridgeMaintenance" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Material 3 特性 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- 启动页主题 -->
    <style name="Theme.RunYangBridgeMaintenance.Splash" parent="Theme.RunYangBridgeMaintenance">
        <!-- 全屏显示 -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/purple_500</item>
    </style>
</resources>